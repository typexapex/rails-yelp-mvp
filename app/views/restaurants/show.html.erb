<div class="wrapper">
  <div class="top"></div>
  <div class="middle">
    <div class="card-large" style="background-image: url('https://source.unsplash.com/400x400/?#{@restaurant.category}-restaurant');">
      <div class="card-large-info">
        <h2><%= @restaurant.name %></h2>
        <p><%= @restaurant.address %></p>
        <p><em><%= @restaurant.category %>&nbsp; // &nbsp;<%= @restaurant.phone_number %></em></p>
      </div>
    </div>
    <%= link_to 'Leave a Review', new_restaurant_review_path(@restaurant), class: 'btn btn-success' %>
    <div class="reviews">
      <ul class="list-group">
        <% @restaurant.reviews.each do |review| %>
          <li class="list-group-item"><%= review.content %> &nbsp;// &nbsp;<%= review.rating %>/5</li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="bottom">
    <%= link_to 'Back', restaurants_path, class: 'btn btn-success' %>
  </div>
</div>
